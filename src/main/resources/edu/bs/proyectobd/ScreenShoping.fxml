<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bs.proyectobd.controladodor.ShoppingController">

   <FlowPane alignment="CENTER" hgap="10" vgap="10">
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
         <VBox fx:id="catalogContainer" alignment="CENTER" spacing="10"/>
      </ScrollPane>
   </FlowPane>

   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="back" onAction="#onRegresarClick" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #ffffff; -fx-background-color: #773d3d; -fx-padding: 10px 20px; -fx-cursor: hand;" text="Regresar" />
      <Button fx:id="carritoButton" text="Carrito" onAction="#onAbrirClick" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-text-fill: #ffffff; -fx-background-color: #333333; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
   </HBox>
</VBox>